 <section class="ftco-section bg-light">
    <div class="container mb-4">
    <div class="input-group">
      <input type="text" class="form-control" id="cityInput" placeholder="Search city, area or localite">
      <button class="btn btn-outline-dark" id="searchButton">Search</button>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle m-1" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Recent Locations
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="recentLocations">
          <!-- Recent locations will be populated here -->
        </div>
      </div>
    </div>
  </div>
     <%= render 'home/shared/filter' %>
<div class="container">
  <input id= "page_value" hidden= true value=<%= @inventories.next_page %> ></input>
  <div class="row" id="infinite-scroll-container">
    <!-- Inventories will be loaded here -->
     <%= render @inventories %>
  </div>
</div>

</section>
<!-- loader -->
<div id="ftco-loader" class="show fullscreen">
  <svg class="circular" width="48px" height="48px">
    <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/>
    <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/>
  </svg>
</div>