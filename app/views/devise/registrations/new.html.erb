<div class="image">
  <div class="background">
    <div id="layoutAuthentication">
      <div id="layoutAuthentication_content">
        <div class="container mt-5 border border-2 p-4">
        <h3>Ready to Join Our Network</h3>
        <p><i class="bi bi-phone m-2"></i>For immediate Assistance call 209 273 9668</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>  
          <form>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="firstName">First Name</label>
                  <%= f.text_field :first_name , class: "form-control", placeholder: "First Name"%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="lastName">Last Name</label>
                  <%= f.text_field :last_name , class: "form-control", placeholder: "Last Name"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="email">Email</label>
                  <%= f.text_field :email , class: "form-control", placeholder: "Email"%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="phoneNumber">Phone Number</label>
                  <%= f.text_field :phone_number , class: "form-control", placeholder: "Phone Number"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="website">Website</label>
                  <%= f.text_field :website, class: "form-control", placeholder: "website"%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="jobTitle"> Select The Job Title</label>
                  <%= f.select :job_title, ['Manager', 'IT System', 'Designer'],{}, class: "form-control"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="company">Company</label>
                  <%= f.text_field :company, class: "form-control", placeholder: "Company"%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="zipCode">Zip Code</label>
                  <%= f.text_field :zip_code, class: "form-control", placeholder: "Zip Code"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="city">City</label>
                  <%= f.text_field :city, class: "form-control", placeholder: "City"%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="state">State</label>
                  <%= f.select :state, ['MP', 'Delhi', 'UP'],{}, class: "form-control"%>
                </div>
              </div>
            </div>
            
            <h4>For faster processing, please select below:</h4>
            <div class="form-check">
              <%= f.check_box :certified_dealer, class: "form-check-input", data: { custom_data: "value" } %>
              <label class="form-check-label" for="certifiedDealer">Are you currently a certified dealer?</label>
            </div><br>

            <h4>Select Dealership Type</h4>
            <div class="form-check">
              <%= f.check_box :dealer_group, class: "form-check-input", data: { custom_data: "value" } %>
              <label class="form-check-label" for="dealerGroup">Do you belong to a dealer group?</label>
            </div>
            <div class="form-group">
              <%= f.text_field :group_name, class: "form-control", placeholder: "Please enter your dealer group name"%>
            </div>
                  
            <h4>How Can we help?</h4>
            <div class="display">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="becomeCertified">
                <label class="form-check-label" for="becomeCertified">Become a certified dealer</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="acquiringInventory">
                <label class="form-check-label" for="acquiringInventory">Acquiring Inventory</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="deliveryLogistics">
                <label class="form-check-label" for="deliveryLogistics">Delivery & Logistics</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="supportBilling">
                <label class="form-check-label" for="supportBilling">Support & Billing</label>
              </div>
            </div>
            <div class="form-group">
              <%= f.text_field :anything_else_help, class: "form-control", placeholder: "Anything Else we can help you with"%>
            </div>
            <%= f.hidden_field :role, value: 'dealer' %>
            <button type="submit" class="btn btn-success w-100"><%= f.submit "SEND" %></button>
          </form>
        <% end %>
        <div class="card-footer text-center py-3">
          Already have an account? Go to <a href="/users/sign_in">login</a>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
