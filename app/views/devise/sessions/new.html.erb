<% if flash[:notice].present? %>
<div id="flash-message-container">
   <div id="flash-message" class="alert alert-lite border border-lite" role="alert">
      <i class="bi bi-calendar-check-fill m-2"></i><%= flash[:notice] %>
   </div>
</div>
<% end %>

<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;">
    <img src="/inventory_1.jpeg" style="width: 100%; height: 100%;" alt="Background Image">
</div>

<div class="container mt-5 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4"> <%= resource_name == :user ? 'Dealer' : "Admin"  %> Login</h3>
                </div>
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-floating mb-3">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "inputEmail", class: "form-control text-dark" %>
                            <label for="inputEmail">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <%= f.password_field :password, autocomplete: "current-password", id: "inputPassword", class: "form-control text-dark" %>
                            <label for="inputPassword">Password</label>
                        </div>
                        <% if devise_mapping.rememberable? %>
                            <div class="form-check mb-3">
                                <%= f.check_box :remember_me, class: "form-check-input text-dark", id: "inputRememberPassword" %>
                                <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                            </div>
                        <% end %>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <%= f.submit "Login", class: "btn btn-primary" %>
                            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small" %>
                        </div>
                    <% end %>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small m-2"><%= link_to "Need an account? Sign up!", new_user_registration_path %></div>
                </div>
            </div>
        </div>
    </div>
</div>
