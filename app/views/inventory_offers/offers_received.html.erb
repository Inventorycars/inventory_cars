<!-- Add this link to include Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<% if flash[:notice].present? %>
  <div id="flash-message-container">
    <div id="flash-message" class="alert alert-lite border border-lite mt-4" role="alert">
      <i class="bi bi-bag-check-fill m-2"></i><%= flash[:notice] %>
    </div>
  </div>
<% end %>

<div class="container-fluid px-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
  <h1 class="mt-4">Offers Received</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
    <li class="breadcrumb-item active"><%= link_to 'Inventories', inventories_path %></li>
    <li class="breadcrumb-item active">Offers Received</li>
  </ol>

  <div class="card mb-4">
    <div class="card-header">
      <i class="bi bi-cloud-arrow-up-fill me-1"></i>
      Offers Received
    </div>

    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">S.No</th>
            <th scope="col">Inventory</th>
            <th scope="col">Offer</th>
            <th scope="col">Status</th>
            <th scope="col">Date Time</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @offers.each_with_index do |offer, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= offer.inventory.make %></td>
              <td><%= offer.offer %></td>
              <td>
                <% if offer.status == 'sent' %>
                  Pending
                <% else %>
                  <%= offer.status %>
                <% end %>
              </td>
              <td><%= offer.created_at.strftime("%d-%b-%Y, %I:%M %p") %></td>
              <td>
                <% if offer.status == 'accepted' %>
                  <button onclick="showConfirmationPopup('<%= update_status_inventory_offers_path(id: offer.id, inventory_offer: { status: 'accepted' }) %>')" class="btn btn-success btn-sm ml-1" style="background-color: green; font-weight: bold" disabled>Accept</button>
                  <button onclick="showConfirmationPopup('<%= update_status_inventory_offers_path(id: offer.id, inventory_offer: { status: 'rejected' }) %>')" class="btn btn-success btn-sm ml-1" style="background-color: red; font-weight: bold" disabled>Reject</button>
                  <button onclick="showConfirmationPopup('<%= update_status_inventory_offers_path(id: offer.id, inventory_offer: { status: 'requote' }) %>')" class="btn btn-warning btn-sm ml-1" style=" font-weight: bold" disabled>Requote</button>
                <% else %>
                  <button onclick="showConfirmationPopup('<%= update_status_inventory_offers_path(id: offer.id, inventory_offer: { status: 'accepted' }) %>')" class="btn btn-success btn-sm ml-1" style="background-color: green; font-weight: bold">Accept</button>
                  <button onclick="showConfirmationPopup('<%= update_status_inventory_offers_path(id: offer.id, inventory_offer: { status: 'rejected' }) %>')" class="btn btn-success btn-sm ml-1" style="background-color: red; font-weight: bold">Reject</button>
                  <button onclick="showConfirmationPopup('<%= update_status_inventory_offers_path(id: offer.id, inventory_offer: { status: 'requote' }) %>')" class="btn btn-warning btn-sm ml-1" style=" font-weight: bold">Requote</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @offers %>
</div>

<!-- Bootstrap Modal -->
<div class="modal" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="hide()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <p>Do you want to proceed?</p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="redirect()">Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="hide()">No</button>
      </div>
    </div>
  </div>
</div>

<script>
  function showConfirmationPopup(url) {
    document.getElementById('confirmationModal').querySelector('.btn-primary').setAttribute('data-url', url);
    $('#confirmationModal').modal('show');
  }

  function hide(){
   $('#confirmationModal').modal('hide');
  }
  function redirect() {
    const url = document.getElementById('confirmationModal').querySelector('.btn-primary').getAttribute('data-url');
    // Close the modal
    $('#confirmationModal').modal('hide');
    // Redirect to the specified URL
    window.location.href = url;
  }
</script>
