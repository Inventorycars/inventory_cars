<% if flash[:notice].present? %>
<div id="flash-message-container">
   <div id="flash-message" class="alert alert-lite border border-lite mt-4" role="alert">
      <i class="bi bi-bag-check-fill m-2"></i><%= flash[:notice] %>
   </div>
</div>
<% end %>
<div class="container-fluid px-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
   <h1 class="mt-4">Offers Sent</h1>
   <ol class="breadcrumb mb-4">
      <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
      <li class="breadcrumb-item active"><%= link_to 'Inventories', inventories_path %></li>
      <li class="breadcrumb-item active">Upload Inventories</li>
   </ol>
   <div class="card mb-4">
      <div class="card-header">
         <i class="bi bi-cloud-arrow-up-fill me-1"></i>
         Offers Sent
      </div>
      <div class="card-body">
         
         <table class="table">
            <thead>
               <tr>
                  <th scope="col">S.No</th>
                  <th scope="col">Inventory</th>
                  <th scope="col">Offer</th>
                  <th scope="col">Status</th>
               </tr>
               <% @offers.each_with_index do |offer, index| %>
                 <tr>
                   <td><%= index + 1 %></td>
                   <td><%= offer.inventory.make %></td>
                   <td><%= offer.offer %></td>
                   <td><%= offer.status || '-' %></td>
                   <td>
                      <button onclick="showConfirmationPopup('<%= edit_inventory_offer_url(id: offer.id, inventory_offer: { status: 'requote' }) %>')" class="btn btn-success btn-sm ml-1" style="background-color: blue; font-weight: bold">Requote</button>
                   </td>
                 </tr>
               <% end %>
            </thead>
            <tbody>

            </tbody>
         </table>
      </div>
   </div>
   <%= paginate @offers %>
</div>


<!-- Bootstrap Modal -->
<div class="modal" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="hide()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Do you want to proceed?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="redirect()">Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="hide()">No</button>
      </div>
    </div>
  </div>
</div>

<script>
  function showConfirmationPopup(url) {
    document.getElementById('confirmationModal').querySelector('.btn-primary').setAttribute('data-url', url);
    $('#confirmationModal').modal('show');
  }

  function hide(){
   $('#confirmationModal').modal('hide');
  }
  function redirect() {
    const url = document.getElementById('confirmationModal').querySelector('.btn-primary').getAttribute('data-url');
    // Close the modal
    $('#confirmationModal').modal('hide');
    // Redirect to the specified URL
    window.location.href = url;
  }
</script>

