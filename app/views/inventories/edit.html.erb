
<div class="p-3 m-1 ">
  <h1 class="mt-4">Inventories</h1>
<ol class="breadcrumb mb-4">
  <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
  <li class="breadcrumb-item active"><%= link_to 'Inventories', inventories_path %></li>
  <li class="breadcrumb-item active"><%= @inventory.id %></li>
</ol>
<hr>
<div class="card mb-4">
  <div class="card-header">
    <i class="bi bi-ticket-detailed-fill me-1"></i>
    Update Inventory
  </div>
  <div class="container-fluid">
    <div class="row p-3">
      <div class="">
        <div class="card border-2 p-4 card shadow-lg rounded-lg">
          <h3 class="text-center">Update your inventory</h3>
          <hr>
          <%= form_with(model: @inventory, url: inventory_path(@inventory), method: :patch, class: "row g-3", multipart: true) do |form| %>
          <!-- Prevoius images -->
          <div class="row">
            <% if @inventory.image_urls.present? %>
              <% @inventory.image_list.each_with_index  do |image_url, index| %>
                <div class="col">
                  <%#= hidden_field_tag "inventory[image_list][#{index}]", value: image_url %>
                  <% form.file_field :image_list, value: image_url %>
                  <%= image_tag(url_for(image_url), class: "d-block w-100", style: "width: 40%; height: 100%; max-height: 600px; object-fit: cover;", onclick: "document.getElementById('image_list').click();" )%>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-6">
            <%= form.label :inventory_type, class: "form-label" %>
            <%= form.text_field :inventory_type, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :stock, class: "form-label" %>
            <%= form.text_field :stock, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :vin, class: "form-label" %>
            <%= form.text_field :vin, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :year, class: "form-label" %>
            <%= form.text_field :year, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :make, class: "form-label" %>
            <%= form.text_field :make, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :model, class: "form-label" %>
            <%= form.text_field :model, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :body, class: "form-label" %>
            <%= form.text_field :body, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
            <%= form.label :trim, class: "form-label" %>
            <%= form.text_field :trim, class: "form-control text-dark" %>
          </div>
          <div class="col-md-6">
