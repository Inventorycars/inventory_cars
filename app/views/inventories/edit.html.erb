            <% if @inventory.image_urls.present? %>
              <div id="current-images">
                <% @inventory.image_list.each do |image_url| %>
                  <%= image_tag(image_url, class: "d-block w-100", style: "width: 40%; height: 100%; max-height: 600px; object-fit: cover;") %>
                <% end %>
              </div>
