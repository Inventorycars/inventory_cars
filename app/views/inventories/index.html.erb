<% if flash[:notice].present? %>
<div id="flash-message-container">
  <div id="flash-message" class="alert alert-lite border border-lite mt-4" role="alert">
    <i class="bi bi-bag-check-fill m-2"></i><%= flash[:notice] %>
  </div>
</div>
<% end %>
<div class="container-fluid px-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
<h1 class="mt-4">Inventories</h1>
<ol class="breadcrumb mb-4">
  <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
  <li class="breadcrumb-item active">Inventories</li>
</ol>
<div class="card mb-4">
  <div class="card-body">
    Your Uploaded Inventories Are Shown here
    <%= link_to 'Upload CSV', upload_csv_inventories_path, target: '_blan' %>
  </div>
</div>
<div class="card mb-4">
  <div class="card-header">
    <i class="bi bi-archive-fill me-1"></i>
    Inventories
  </div>
  <% unless @inventories.empty? %>
  <div class="card-body">
    <!-- Switch Button -->
    <div class="form-check form-switch m-2">
      <input class="form-check-input shadow" type="checkbox" id="switchButton">
      <label id="viewLabel" class="form-check-label" for="switchButton">Grid View</label>
    </div>
    <!-- Grid View Placeholder -->  
    <div id="gridView" class="hidden">
      <%= render 'inventories/shared/grid_inventories' %>
    </div>
    <!-- Table View Placeholder -->
    <div id="tableView" class="hidden">
      <%= render 'inventories/shared/table_inventories' %>
    </div>
    <nav aria-label="Page navigation example" id="paginationControls">
      <ul class="pagination">
        <li class="page-item">
          <%= link_to 'Previous', (@inventories.previous_page ? "/inventories?page=#{@inventories.previous_page}" : "#"), class: "page-link bi bi-caret-left #{"disabled" unless @inventories.previous_page}" %>
        </li>
        <li class="page-item <%= "disabled" if @inventories.current_page == 1 %>">
          <%= link_to '1', "/inventories?page=1", class: "page-link" %>
        </li>
        <li class="page-item <%= "disabled" if @inventories.current_page == 2 %>">
          <%= link_to '2', "/inventories?page=2", class: "page-link" %>
        </li>
        <% if @inventories.total_pages > 3 %>
        <li class="page-item"><span class="page-link">...</span></li>
        <li class="page-item <%= "disabled" if @inventories.current_page == @inventories.total_pages - 1 %>">
          <%= link_to (@inventories.total_pages - 1), "/inventories?page=#{@inventories.total_pages - 1}", class: "page-link" %>
        </li>
        <li class="page-item <%= "disabled" if @inventories.current_page == @inventories.total_pages %>">
          <%= link_to @inventories.total_pages, "/inventories?page=#{@inventories.total_pages}", class: "page-link" %>
        </li>
        <% end %>
        <li class="page-item">
          <%= link_to(@inventories.next_page ? "/inventories?page=#{@inventories.next_page}" : "#", class: "page-link #{"disabled" unless @inventories.next_page}") do %>
          Next<i class="bi bi-caret-right"></i>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
  <% else %>
  <p class="m-2 p-2 ">You do not have any inventories please upload some </p>
  <% end %>
</div>
</div>