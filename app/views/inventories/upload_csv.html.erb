<div class="container-fluid px-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
   <h1 class="mt-4">Upload Inventories</h1>
   <ol class="breadcrumb mb-4">
      <li class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></li>
      <li class="breadcrumb-item active"><%= link_to 'Inventories', inventories_path %></li>
      <li class="breadcrumb-item active">Upload Inventories</li>
   </ol>
   <%# <div class="card mb-4">
      <div class="card-body">
      </div>
      </div> %>
   <div class="card mb-4">
      <div class="card-header">
         <i class="bi bi-cloud-arrow-up-fill me-1"></i>
         Upload Inventories
      </div>
      <div class="card-body">
         <%= form_tag attach_csv_inventories_path, method: :post, multipart: true, class: "form-inline" do %>
         <div class="mb-3 m-2 w-50">
            <label for="formFile" class="form-label fs-5 m-1 p-2">
            <i class="bi bi-filetype-csv"></i>Choose CSV file to upload
            </label>
            <%= file_field_tag :csv_file, accept: ".csv", class: "form-control w-50" %>
         </div>
         <div class="m-2">
         <%= submit_tag 'Import', class: "btn btn-primary shadow"%>
         <%= link_to 'Download Sample CSV', download_sample_csv_inventories_path, class: "btn btn-primary shadow"%>
         </div>
         <% end %>
      </div>
      <div class="m-2 p-2 mt-5">
         <h5> * Important Instructions </h5>
         <p class="m-2">
            <i class="bi bi-caret-right-fill"></i> Please upload only CSV file no other extension should be attached. 
         </p>
         <p class="m-2">
            <i class="bi bi-caret-right-fill"></i> Please carefully attach all data in the file.
         </p>
      </div>
   </div>
</div>